<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    tools:context=".ClickToPayExample">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click to Pay Demo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textColor="#000000" />

        <!-- Step 1: Get Authentication Credentials -->
        <Button
            android:id="@+id/btnStep1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_button"
            android:text="Step 1: Get Authentication Credentials"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="12dp" />

        <ImageView
            android:id="@+id/rotatingView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:background="@android:color/holo_red_dark" />

        <ImageView
            android:id="@+id/rotatingView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:background="@android:color/holo_blue_bright" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="16dp" />

        <!-- Result Text -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#F5F5F5">
            
            <TextView
                android:id="@+id/resultText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click 'Initialize Click To Pay' to begin"
                android:textSize="16sp"
                android:textColor="#333333"
                android:lineSpacingExtra="4dp"
                android:padding="16dp" />
        </ScrollView>

        <!-- Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Instructions:\n\n• Click each step button in sequence\n• Each button will be enabled after the previous step completes\n• Watch the result area for detailed progress\n• Check Logcat for detailed logs (tag: ClickToPay)"
            android:textSize="14sp"
            android:textColor="#666666"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</ScrollView>
